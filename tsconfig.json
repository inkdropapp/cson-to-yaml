{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "lib"]
}
