{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2017"],
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "lib"]
}
